<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
    <name>bhoothathalwar</name>
    <version>1.0</version>
    <creationDate>16th October 2024</creationDate>
    <author>Kannan Naidu Venugopal</author>
    <authorEmail>kannannaidu@gmail.com</authorEmail>
    <copyright>(C) 2024 Kannan Naidu Venugopal.</copyright>
    <description>TPL_BHOOTHATHALWAR_XML_DESCRIPTION</description>
    <inheritable>1</inheritable>

    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>index.php</filename>
        <filename>joomla.asset.json</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>html</folder>
    </files>

    <media destination="templates/site/bhoothathalwar" folder="media">
        <folder>js</folder>
        <folder>css</folder>
        <folder>images</folder>
    </media>

    <positions>
        <position>debug</position>
        <position>position-0</position>
        <position>position-1</position>
        <position>position-2</position>
        <position>position-3</position>
        <position>position-4</position>
        <position>position-5</position>
        <position>position-6</position>
        <position>position-7</position>
        <position>position-8</position>
        <position>position-9</position>
        <position>position-10</position>
        <position>position-11</position>
        <position>position-12</position>
        <position>position-13</position>
        <position>position-14</position>
        <position>footer</position>
    </positions>

    <languages folder="language">
        <language tag="en-GB">en-GB/tpl_bhoothathalwar.ini</language>
        <language tag="en-GB">en-GB/tpl_bhoothathalwar.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                        name="noteBrand"
                        type="note"
                        description="TPL_BHOOTHATHALWAR_BRAND_NOTE_TEXT"
                        class="alert alert-info"
                />

                <field
                        name="brand"
                        type="radio"
                        label="TPL_BHOOTHATHALWAR_BRAND_LABEL"
                        default="0"
                        layout="joomla.form.field.radio.switcher"
                        filter="options"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                        name="logoFile"
                        type="media"
                        schemes="http,https,ftp,ftps,data,file"
                        validate="url"
                        relative="true"
                        default=""
                        label="TPL_BHOOTHATHALWAR_LOGO_LABEL"
                        showon="brand:1"
                />

                <field
                        name="logoStyle"
                        type="text"
                        default=""
                        label="TPL_BHOOTHATHALWAR_LOGO_STYLE"
                        description="TPL_BHOOTHATHALWAR_LOGO_DESC"
                        filter="string"
                        showon="brand:1"
                />

                <field
                        name="siteTitle"
                        type="text"
                        default=""
                        label="TPL_BHOOTHATHALWAR_TITLE"
                        filter="string"
                        showon="brand:1"
                />

                <field
                        name="siteDescription"
                        type="text"
                        default=""
                        label="TPL_BHOOTHATHALWAR_TAGLINE_LABEL"
                        description="TPL_BHOOTHATHALWAR_TAGLINE_DESC"
                        filter="string"
                        showon="brand:1"
                />

                <field
                        name="backTop"
                        type="radio"
                        label="TPL_BHOOTHATHALWAR_BACKTOTOP_LABEL"
                        layout="joomla.form.field.radio.switcher"
                        default="0"
                        filter="integer"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
